---
import { Image } from 'astro:assets';

interface Props {
  imageUrl: string;
  alt: string;
  title?: string;
  subtitle?: string;
}

const { imageUrl, alt, title, subtitle } = Astro.props;
---

<div  transition:name={`img-cat-${title}`} class="relative w-full overflow-hidden h-[50vh] sm:h-[60vh] lg:h-[55vh] rounded-lg border-8 border-red-600">
  <Image
    src={imageUrl}
    alt={alt}
    width={1920}
    height={1080}
    class="object-cover w-full h-full"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-black/90 to-transparent"></div>
  <div class="absolute inset-0 flex flex-col justify-end p-6 sm:p-10 lg:p-16">
    {title && (
      <h1 class="text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-red-600 mb-2 sm:mb-4">
        {title}
      </h1>
    )}
    {subtitle && (
      <p class="text-base sm:text-lg lg:text-xl xl:text-2xl text-white/80">
        {subtitle}
      </p>
    )}
  </div>
</div>

