---
import { getCldImageUrl } from 'astro-cloudinary/helpers';
import {CldImage} from 'astro-cloudinary';
import { Image } from 'astro:assets';

interface Props{
    prod: {name: string,
    slug: string,
    description: string,
    price: number,
    stock: number,
    gallery: string[],
    active: boolean,
    featured: boolean}
}
const url = getCldImageUrl({src: "413-600x600_kagwap"})
const { prod } = Astro.props;
