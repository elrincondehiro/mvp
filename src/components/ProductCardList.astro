---
// import { getCldImageUrl } from 'astro-cloudinary/helpers';
import {CldImage} from 'astro-cloudinary';
import {Image} from '@unpic/astro';

interface Props{
    prod: {name: string,
    slug: string,
    description: string,
    price: number,
    stock: number,
    gallery: string[],
    active: boolean,
    featured: boolean}
}
const url = "https://res.cloudinary.com/dcmb5yfbb/image/upload/v1728857926/nassos_60559c0108.jpg"
const { prod } = Astro.props;
---
<a href={prod.slug} target="_self">
    
    <!-- <div class="rounded-lg shadow-2xl overflow-hidden min-w-60 w-60 md:min-w-32 md:w-32  aspect-square "> -->
    
    <Image
        src={url}
        width={1080}
        height={1080}
        alt="alt image"
        priority
        
        sizes={" (min-width: 768px) 25vw, 100vw"}
    
    />


    <!-- </div> -->
    <!-- <img loading="eager" src={url} class="w-60 aspect-square object-cover rounded-md md:w-32" />     -->
    <div class="flex flex-col justify-center">
        <span>{prod.name} : {prod.price}</span>
        <label for="descripcion"> Descripcion:</label>
        <p class="w-full"  id="descripcion"> {prod.description}</p>
        
    </div>
</a>
<button class="border-2 border-red-900 flex ml-auto mr-4 mb-4 px-4 py-2"> add to cart</button>